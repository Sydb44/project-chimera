# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.gd]
indent_style = tab
quote_type = double

[*.{tres,tscn,res,import,gdns,gdshader}]
indent_style = tab
